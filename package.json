{
  "name": "n8n-nodes-imap",
  "version": "2.13.0",
  "description": "This node allows you to connect to an IMAP server and retrieve emails.",
  "keywords": [
    "n8n-community-node-package"
  ],
  "license": "MIT",
  "homepage": "",
  "author": {
    "name": "Vasily Maslyukov",
    "email": "auro.coding@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/umanamente/n8n-nodes-imap.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "run-dev": "npm run build && cross-env N8N_NODES_DEBUG_ENABLED=true N8N_LOG_LEVEL=debug n8n start",
    "run-dev-tunnel": "npm run build && cross-env N8N_NODES_DEBUG_ENABLED=true N8N_LOG_LEVEL=debug n8n start --tunnel",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ImapCredentials.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Imap/Imap.node.js"
    ]
  },
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "^1.2.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/imapflow": "^1.0.22",
    "@types/jest": "^30.0.0",
    "@types/mailparser": "^3.4.6",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/parser": "~7.18",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.1",
    "jest": "^30.2.0",
    "n8n-workflow": "*",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.4.5",
    "typescript": "~5.5.4"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "imapflow": "^1.0.188",
    "mailparser": "^3.7.3",
    "nodemailer": "^6.10.1"
  }
}
